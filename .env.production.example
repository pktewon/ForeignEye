# ForeignEye 프로덕션 환경 변수 템플릿
# 사용 방법: 이 파일을 .env.production으로 복사하고 실제 값으로 변경하세요

# Flask 설정
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHARACTER_STRING
JWT_SECRET_KEY=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHARACTER_STRING
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=8000

# 데이터베이스 설정 (프로덕션)
DB_USER=foreigneye_prod_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_16_CHARS
DB_HOST=your-database-host.com
DB_PORT=3306
DB_NAME=foreigneye_prod_db

# API 키
GNEWS_API_KEY=your_gnews_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Redis (캐싱 - 옵션)
REDIS_URL=redis://your-redis-host:6379/0

# CORS 설정
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 로깅
LOG_LEVEL=INFO
